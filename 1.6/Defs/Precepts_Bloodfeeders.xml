  <ThoughtDef>
	<defName>BGM_FungalSymbiosis_Revered_Opinion_Fungal</defName>
	<thoughtClass>Thought_SituationalSocial</thoughtClass>
	<workerClass>BiomesGeneticsMushkin.ThoughtWorker_Precept_FungalSymbiosis_Social</workerClass>
	<validWhileDespawned>true</validWhileDespawned>
	<stages>
	  <li>
		<label>fungal</label>
		<baseOpinionOffset>20</baseOpinionOffset>
	  </li>
	</stages>
  </ThoughtDef>

  <ThoughtDef>
	<defName>BGM_FungalSymbiosis_Reviled_Opinion_Fungal</defName>
	<thoughtClass>Thought_SituationalSocial</thoughtClass>
	<workerClass>BiomesGeneticsMushkin.ThoughtWorker_Precept_FungalSymbiosis_Social</workerClass>
