                    <symbol>animal</symbol>
                </li>
                <li>
                    <symbol>cry</symbol>
                </li>
            </prefixSymbols>
            <suffixSymbols>
                <li>
                    <symbol>caller</symbol>
                </li>
                <li>
                    <symbol>crier</symbol>
                </li>
                <li>
                    <symbol>hailer</symbol>
                </li>
            </suffixSymbols>
        </symbolPack>
    </GeneDef>

