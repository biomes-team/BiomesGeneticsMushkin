    <GeneDef>
        <defName>BGM_FungalUndead</defName>
        <label>fungal undead</label>
        <geneClass>BiomesGeneticsMushkin.Gene_FungalUndead</geneClass>
        <description>This gene is given by a specialized caste of mushkin, turning what was a corpse into a temporary ally. They will die once more within days.</description>
        <iconPath>UI/Genes/Gene_FungalUndead</iconPath>
        <displayCategory>Fungal</displayCategory>
        <biostatMet>-3</biostatMet>
        <biostatCpx>1</biostatCpx>
        <disabledWorkTags>
            <li>ManualSkilled</li>
            <li>Caring</li>
            <li>Social</li>
            <li>Intellectual</li>
            <li>Animals</li>
            <li>Artistic</li>
        </disabledWorkTags>
    </GeneDef>

    <GeneDef>
        <defName>BGM_CasteSwap</defName>
        <label>caste swap</label>
        <geneClass>BiomesGeneticsMushkin.MushkinGene</geneClass>
        <description>The fungus within this host allows them to manipulate the fungus within others, changing the way it is expressed in their body.</description>
        <iconPath>UI/Ability-Genes/CasteSwap</iconPath>
        <displayCategory>Fungal</displayCategory>
        <displayOrderInCategory>-1</displayOrderInCategory>
        <prerequisite>BGM_FungalSymbiosis</prerequisite>
