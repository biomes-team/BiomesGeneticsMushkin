    <GeneDef>
        <defName>BGM_ResurrectionSpores</defName>
        <label>resurrection spores</label>
        <geneClass>BiomesGeneticsMushkin.MushkinGene</geneClass>
        <description>The unique fungi within the host allow them to resurrect the recently dead they touch thanks to specialized mycelia that temporarily spread into the corpse.</description>
        <iconPath>UI/Ability-Genes/Resurrection_Spores</iconPath>
        <displayCategory>SporesFungal</displayCategory>
        <displayOrderInCategory>-1</displayOrderInCategory>
